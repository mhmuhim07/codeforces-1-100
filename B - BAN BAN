#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main(){
	int t;
	cin>>t;
	while(t--){
		int n;
		cin>>n;
		if(n%2==1){
			int s=(n/2)+1;
			cout<<s<<endl;
			int s1=2;
			int s2=n*3;
			for(int i=0;i<s;i++){
				cout<<s1<<" "<<s2<<endl;

				s1+=3;
				s2-=3;
			}
		}
		else{
			int s=(n/2);
			cout<<s<<endl;
			int s1=2;
			int s2=n*3;
			for(int i=0;i<s;i++){
				cout<<s1<<" "<<s2<<endl;

				s1+=3;
				s2-=3;
			}

		}
		
		}

	}
