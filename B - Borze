#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define fo(i,a,n) for(ll i=a;i<n;i++)
#define all(v) (v).begin(),(v).end()

#define pb push_back
#define endl '\n'

int main() {

    ios_base::sync_with_stdio(false);
    cin.tie(0),cout.tie(0);

    int t=1;
    //cin >> t;
    while(t--){
        string s;
        cin>>s;
        fo(i,0,s.size()){
            if(s[i]=='.')cout<<"0";
            else if(s[i]=='-'&&s[i+1]=='.')
                {
                    cout<<"1";
                  i=  i+1;
                }
                else{
                    cout<<"2";
                    i=i+1;
                }

        }
    }
  
    return 0;
}
