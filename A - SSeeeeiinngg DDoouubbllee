#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define fo(i,a,n) for(ll i=a;i<n;i++)
#define all(v) (v).begin(),(v).end()
#define test int t; cin>>t; for(int no = 1;no<=t;no++)
#define pb push_back
#define endl '\n'
#define ff first
#define ss second
#define fast ios_base::sync_with_stdio(false);cin.tie(0),cout.tie(0);
void solve()
{
    string s,s1;
    cin>>s;
    s1=s;
    reverse(s1.begin(),s1.end());
    if(s1==s) {
        for(auto u:s)cout<<u<<u;
        cout<<endl;
    }
    else {
            sort(all(s));
            string t,t1;
            t=s;
            t1=s;
            reverse(all(t1));
            t=t+t1;
            for(auto u:t) cout<<u;
            cout<<endl;


    }


}
int main()
{

    fast;

    int t=1;
    cin >> t;
    while(t--)
    {
        solve();
    }

    return 0;
}

